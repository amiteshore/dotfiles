general {
  colors = true
  interval = 1
  separator = "|"
}

order += "volume master"
order += "ethernet _first_"
order += "wireless _first_"
order += "battery all"
order += "tztime local"

volume master {
  format = "VOL: %volume"
  format_muted = "VOL: muted (%volume)"
  device = "default"
}

ethernet _first_ {
  format_up = "E: up"
  format_down = "E: down"
}

wireless _first_ {
  format_up = "W: %essid"
  format_down = "W: down"
}

battery all {
  format = "%status %percentage"
  integer_battery_capacity = true
}

tztime local {
  format = "%a %I:%M %p "
}
