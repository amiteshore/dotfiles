#!/usr/bin/zsh

# formats for listing files & directories
alias ls='ls --color=auto'
alias l='ls -lAh'
alias la='ls -A'

# colorize grep output
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# confirm before overwriting something
alias cp='cp -v -i'
alias mv='mv -v -i'
alias rm='rm -v -i'
alias rmrf='rm -rfiv'

# quickly change directories
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -' # go back to the previous directory

alias p='cd ~/projects'
alias temp='cd ~/projects/temp'
alias dev='cd ~/projects/dev'

alias dl='cd ~/Downloads && ls -lAh'
alias pics='cd ~/Pictures'
alias dot='cd ~/dotfiles'
alias t='cd ~/Temporary'

# open config files in vim
alias vrc='vim ~/.vimrc'
alias zrc='vim ~/.zshrc'
alias ic='vim ~/.config/i3/config'
alias ac='vim ~/.config/alacritty/alacritty.yml'
alias al='vim ~/.aliases'

# git
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gs='git status'
alias gp='git push'
alias gl='git pull'
alias gc='git commit'

# misc
alias h='history'
alias v='vim'
alias vi='vim'
# alias cat='bat'
alias code='code .'
# alias mkdir='mkdir -v -p'
alias path='echo -e ${PATH//:/\\n}'
alias :q='exit' # quit like vim :)

