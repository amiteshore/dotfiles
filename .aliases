#!/usr/bin/zsh

# Formats for listing files & directories
# alias ls='ls --color=auto'
# alias l='ls -lAh'
# alias la='ls -A'

# Use exa for ls (exa is too long to type :)
alias ls='exa --all'
alias l='exa --all --long'

# Colorize grep output
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Quickly change directories
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -' # go back to the previous directory

alias p='cd ~/projects'
alias temp='cd ~/projects/temp'
alias dev='cd ~/projects/dev'

alias dl='cd ~/Downloads && exa --all --long --sort=time --reverse'
alias pics='cd ~/Pictures'
alias dot='cd ~/dotfiles'
alias t='cd ~/Temporary'

# Open config files in vim
alias al='vim ~/.aliases'
alias i3conf='vim ~/.config/i3/config'
alias alaconf='vim ~/.config/alacritty/alacritty.yml'

alias zprofile='vim ~/.zprofile'
alias zshenv='vim ~/.zshenv'
alias zshrc='vim ~/.zshrc'
alias vimrc='vim ~/.vimrc'

# Git
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gs='git status'
alias gp='git push'
alias gl='git pull'
alias gc='git commit'

# Misc
alias v='vim'
alias vi='vim'

alias h='history'
alias code='code .'
alias rg='ranger'

alias path='echo -e ${PATH//:/\\n}' # print each PATH entry on a separate line
alias :q='exit' # quit like vim :)

