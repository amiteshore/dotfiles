#!/usr/bin/zsh

# quickly change directories
alias ~='cd ~'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias -- -='cd -' # go back to the previous directory

alias temp='cd ~/projects/temp'
alias dev='cd ~/projects/dev'
alias work='cd ~/work'
alias dl='cd ~/Downloads && exa --all --long --sort=time --reverse'
alias pix='cd ~/Pictures'
alias conf='cd ~/.config'
alias aur="cd ~/Downloads/AUR"
alias dot='cd ~/dotfiles'
alias tt='cd ~/Temporary'

# open config files 
alias al='vim ~/.aliases'
alias zprofile='vim ~/.zprofile'
alias zshenv='vim ~/.zshenv'
alias zshrc='vim ~/.zshrc'
alias vimrc='vim ~/.config/nvim/init.vim'
alias tmuxconf="vim ~/.tmux.conf"
alias i3conf='vim ~/.config/i3/config'
alias alaconf='vim ~/.config/alacritty/alacritty.yml'
alias st='vim ~/.config/starship.toml'

# git
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gs='git status'
alias gp='git push'
alias gl='git pull'
alias gc='git commit'

# systemd
alias start="sudo systemctl start "
alias stop="sudo systemctl stop "
alias status="sudo systemctl status "
alias running-services="sudo systemctl --state=running --type=service"

# misc
alias grep='grep --color=auto --line-number'
alias ls='exa --all'
alias l='exa --all --long'

alias t='tmux'
alias vim='nvim'
alias cat='bat'
alias h='history'
alias code='code .'
alias neo='neofetch'
alias sz="source ~/.zshrc"

alias path='echo -e ${PATH//:/\\n}' # print each PATH entry on a separate line
alias mem='free -h'
alias disk='df -h'
alias dvorak='setxkbmap dvorak'
alias qwerty='setxkbmap us'

# temporary
