# set mod key (Mod4=<Super>)
set $mod Mod4

# font for window titles (although I've no windows)
font pango:Noto Sans 8

# use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume    exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
bindsym XF86AudioLowerVolume    exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
bindsym XF86AudioMute           exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

# take screenshot
bindsym Print               exec scrot --focused $HOME/Pictures/screenshots/`date +%Y-%m-%d_%H:%M:%S`.png

# program launcher
bindsym $mod+Shift+Return   exec --no-startup-id rofi -show run

# start applications
bindsym $mod+Return         exec alacritty
bindsym $mod+F1             exec google-chrome-stable
bindsym $mod+F2             exec spotify
bindsym $mod+F3             exec firefox-developer-edition

# close window
bindsym $mod+Shift+c        kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split orientation
bindsym $mod+Ctrl+h split h
bindsym $mod+Ctrl+v split v 

# enter fullscreen mode for the focused container
bindsym $mod+Ctrl+f fullscreen toggle

# reload the configuration file
bindsym $mod+Ctrl+r reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# we use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# put workspace 10 on laptop screen
workspace 10 output eDP-1

# open applications on specific workspaces
assign [class="Google-chrome"] $ws1
for_window [class="Spotify"] move container to workspace $ws9

# toggle between last two workspaces with the same keystroke
workspace_auto_back_and_forth yes

# avoid automatically focused when hover over a window
focus_follows_mouse no

# resize window
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

set $mode_system (l)ock, (e)xit, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock --tiling --image ~/.config/i3/screenshot.png && sleep 1, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal
    bindsym Escape mode "default"
}
bindsym $mod+x mode "$mode_system"

# status bar
bar {
    status_command i3status
    font pango:Noto Sans 11
    position top
    colors {
        background #141414
    }
}

# set background wallpaper
exec --no-startup-id feh --bg-fill --randomize $HOME/Pictures/.wallpapers/*

# disable window titlebars
for_window [class=".*"] border pixel 0

# only enable gaps on a workspace when there is at least one container
smart_gaps on
smart_borders on

# set inner/outer gaps
gaps inner 6
gaps outer -3

# vim: filetype=i3config
